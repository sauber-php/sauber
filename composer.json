{
    "name": "sauber-php/sauber",
    "description": "The API template using the Sauber PHP framework",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "role": "Developer",
            "name": "Steve McDougall",
            "email": "juststevemcd@gmail.com",
            "homepage": "https://www.juststeveking.uk/"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "src/App/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.1",
        "sauber-php/framework": "dev-main"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "preferred-install": "dist",
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "serve": "php -S localhost:8080 public/index.php"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.8",
        "pestphp/pest": "^1.21",
        "phpstan/phpstan": "^1.7"
    }
}
